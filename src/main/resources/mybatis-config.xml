<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="localCacheScope" value="STATEMENT"/> <!-- 关闭sqlSession缓存，则会多次执行相同sql查询语句 -->
        <setting name="logImpl" value="LOG4j"/>
    </settings>

    <typeAliases>
        <package name="com.zcx.pojo"/>
    </typeAliases>
</configuration>